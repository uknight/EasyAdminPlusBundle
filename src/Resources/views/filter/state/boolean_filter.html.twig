{% if data['value'] is defined and data['value'] and data['value'] != filtertype.defaults['value'] %}
    <span class="filter-state">
        <small>{{ filtertype.filterLabel |trans }}</small>
        <span class="badge">
            {% if data['value']=='true' %}{{ 'filter.true'|trans }}{% endif %}
            {% if data['value']=='false' %}{{ 'filter.false'|trans }}{% endif %}
            {% if data['value']=='all' %}{{ 'filter.all'|trans }}{% endif %}
        </span>
    </span>
{% endif %}