{% trans_default_domain 'EasyAdminBundle' %}

{% set _paginator_request_parameters = _request_parameters|merge({'referer': null}) %}

    <div class="list-pagination">
        <div class="row">
            <div class="col-sm-3 hidden-xs list-pagination-counter">
                <ul class="pagination" style="float:none;" >
                    <li style="list-style: none;">
                        {{ 'paginator.counter'|trans({ '%start%': paginator.currentPageOffsetStart, '%end%': paginator.currentPageOffsetEnd, '%results%': paginator.nbResults})|raw }}
                    </li>
                </ul>
            </div>
            {% if paginator.haveToPaginate %}
            <div class="col-xs-12 col-sm-9">
                <ul class="pager pagination list-pagination-paginator {{ 1 == paginator.currentPage ? 'first-page' : '' }} {{ paginator.hasNextPage ? '' : 'last-page' }}">
                    {% if 1 == paginator.currentPage %}
                        <li class="btn btn-secondary disabled">
                            <span class="btn-label">
                                <i class="fa fa-angle-double-left"></i> {{ 'paginator.first'|trans }}
                            </span>
                        </li>
                    {% else %}
                        <li class="btn btn-secondary">
                            <a href="{{ path('easyadmin', _paginator_request_parameters|merge({ page: 1 }) ) }}" class="btn-label">
                                <i class="fa fa-angle-double-left"></i> {{ 'paginator.first'|trans }}
                            </a>
                        </li>
                    {% endif %}

                    {% if paginator.hasPreviousPage %}
                        <li class="btn btn-secondary">
                            <a href="{{ path('easyadmin', _paginator_request_parameters|merge({ page: paginator.previousPage }) ) }}" class="btn-label">
                                <i class="fa fa-angle-left"></i> {{ 'paginator.previous'|trans }}
                            </a>
                        </li>
                    {% else %}
                        <li class="btn btn-secondary disabled">
                            <span class="btn-label">
                                <i class="fa fa-angle-left"></i> {{ 'paginator.previous'|trans }}
                            </span>
                        </li>
                    {% endif %}

                    <li class="btn btn-secondary">
                        <span class="btn-label">
                            {{ paginator.currentPage }} / {{paginator.nbPages}}
                        </span>
                    </li>

                    {% if paginator.hasNextPage %}
                        <li class="btn btn-secondary">
                            <a href="{{ path('easyadmin', _paginator_request_parameters|merge({ page: paginator.nextPage }) ) }}" class="btn-label">
                                {{ 'paginator.next'|trans }} <i class="fa fa-angle-right"></i>
                            </a>
                        </li>
                    {% else %}
                        <li class="btn btn-secondary disabled">
                            <span class="btn-label">
                                {{ 'paginator.next'|trans }} <i class="fa fa-angle-right"></i>
                            </span>
                        </li>
                    {% endif %}

                    {% if paginator.currentPage < paginator.nbPages %}
                        <li class="btn btn-secondary">
                            <a href="{{ path('easyadmin', _paginator_request_parameters|merge({ page: paginator.nbPages }) ) }}" class="btn-label">
                                {{ 'paginator.last'|trans }} <i class="fa fa-angle-double-right"></i>
                            </a>
                        </li>
                    {% else %}
                        <li class="btn btn-secondary disabled">
                            <span class="btn-label">
                                {{ 'paginator.last'|trans }} <i class="fa fa-angle-double-right"></i>
                            </span>
                        </li>
                    {% endif %}
                </ul>
            </div>
            {% endif %}
        </div>
    </div>
